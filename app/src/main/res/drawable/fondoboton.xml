<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape android:shape="oval">
            <gradient
                android:angle="90" android:centerColor="@color/white" android:endColor="@color/verde" android:startColor="@color/black" android:type="linear" />
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="90" android:centerColor="@color/white" android:endColor="@color/black" android:startColor="@color/verde" android:type="linear" />
        </shape>
    </item>


</selector>